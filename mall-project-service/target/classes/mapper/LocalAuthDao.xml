<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mall.dao.LocalAuthDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mall.entity.LocalAuthEntity" id="localAuthMap">
        <result property="localAuthId" column="local_auth_id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
        <result property="lastEditTime" column="last_edit_time"/>
    </resultMap>

	<select id="selectByUsername" resultType="com.mall.model.LocalAuth">
		select * from tb_local_auth where user_name = #{username}
	</select>
	
	<select id="selectByMobile" resultType="com.mall.model.LocalAuth">
		select * from tb_local_auth where mobile = #{mobile}
	</select>
	
	<select id="selectByLocalAuthId" resultType="com.mall.model.LocalAuth">
		select * from tb_local_auth where local_auth_id = #{localAuthId}
	</select>

</mapper>